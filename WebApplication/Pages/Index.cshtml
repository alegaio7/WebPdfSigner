@page "{handler?}"
@model IndexModel
@{
    ViewData["Title"] = "Select file";
}

<div class="card">
    <div class="card-header">
        <h3>PDF file selection</h3>
    </div>
    <div class="card-body">
        <p>This web application allows you to sign PDF files using a helper desktop module.</p>
        <p>The desktop module must be running in order to sign files. The signing process is transparent for the user, and happens in the background except for the certificate selection, that is carried on by the module.</p>
        <div class="form-group">
            <label for="txtFile">Select a PDF file to sign:</label>
            <input type="file" id="txtFile" name="files" class="form-control" required accept=".pdf">
        </div>
        <div class="form-group">
            <label for="txtNameInSignature">Select a name to appear in the signature:</label>
            <input type="text" id="txtNameInSignature" class="form-control" value="John Doe">
        </div>
        <br />
        <div>
            <button id="btnSign" type="button" class="btn btn-primary" disabled>
                @Localizer["Sign file"]
            </button>
        </div>
        <div>
            <textarea id="txtLog" rows="4" readonly class="w-100 small"></textarea>
        </div>
    </div>
</div>
<script type="module" >
    import Index from '/js/index.js';
    var o = new Index();
</script>